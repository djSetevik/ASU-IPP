<UserControl x:Class="ASUIPP.App.Views.HeadMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <DockPanel Grid.Row="0" Margin="0,0,0,15">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="Перейти к работе преподавателя" Padding="12,5" Margin="5,0"
                        Command="{Binding GoToTeacherWorkCommand}"/>
                <Button Content="Импорт архивов" Padding="12,5" Margin="5,0"
                        Command="{Binding ImportArchivesCommand}"/>
                <Button Content="Создать сводный отчет" Padding="12,5"
                        Command="{Binding CreateSummaryReportCommand}"/>
            </StackPanel>
            <TextBlock FontSize="16" VerticalAlignment="Center">
                <Run Text="Добро пожаловать, "/><Run Text="{Binding WelcomeName, Mode=OneWay}" FontWeight="Bold"/><Run Text="!"/>
            </TextBlock>
        </DockPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <!-- Список преподавателей -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Teachers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Margin="0,2" Padding="10,10" HorizontalContentAlignment="Stretch"
                                Tag="{Binding TeacherId}"
                                Click="TeacherButton_Click">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Right" FontSize="14" FontWeight="Bold"
                                           VerticalAlignment="Center">
                                    <Run Text="Сумма балов: "/><Run Text="{Binding TotalPoints, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding ShortName}" FontSize="14"
                                           VerticalAlignment="Center"/>
                            </DockPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Низ: добавить + итого -->
        <DockPanel Grid.Row="2" Margin="0,10,0,0">
            <Button DockPanel.Dock="Left" Content="＋" FontSize="18" Padding="10,3"
                    Command="{Binding AddTeacherCommand}" ToolTip="Добавить преподавателя"/>
            <Border DockPanel.Dock="Right" BorderBrush="Black" BorderThickness="0,2,0,0" Padding="10,8">
                <TextBlock HorizontalAlignment="Right" FontSize="16" FontWeight="Bold">
                    <Run Text="ИТОГО Сумма балов: "/><Run Text="{Binding GrandTotal, Mode=OneWay}"/>
                </TextBlock>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>