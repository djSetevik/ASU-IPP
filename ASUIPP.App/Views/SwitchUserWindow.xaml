<Window x:Class="ASUIPP.App.Views.SwitchUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сменить пользователя" Width="450" Height="380"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выберите пользователя:" FontSize="14"
                   Margin="0,0,0,10"/>

        <ListBox Grid.Row="1" x:Name="UsersList" Margin="0,0,0,10"
                 FontSize="13">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="3,2">
                        <TextBlock DockPanel.Dock="Right" Text="{Binding RoleText}"
                                   Foreground="Gray" FontSize="11" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding FullName}" VerticalAlignment="Center"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <DockPanel Grid.Row="2" Margin="0,0,0,10">
            <Button DockPanel.Dock="Left" Content="🗑 Удалить выбранного" Padding="10,4"
                    Click="Delete_Click" Foreground="DarkRed"/>
            <CheckBox x:Name="IsHeadCheckBox" VerticalAlignment="Center"
                      Content="Войти как заведующий кафедрой"
                      HorizontalAlignment="Right"/>
        </DockPanel>

        <TextBlock Grid.Row="3" x:Name="InfoText" Foreground="Gray" FontSize="11"
                   TextWrapping="Wrap" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Войти" Padding="20,6" Margin="0,0,10,0"
                    Click="Login_Click" IsDefault="True"/>
            <Button Content="Отмена" Padding="20,6" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>