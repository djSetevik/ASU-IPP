<Window x:Class="ASUIPP.App.Views.EditWorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование работы" Width="600" Height="500"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip"
        Background="#C0C0C0">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название -->
        <TextBlock Grid.Row="0" Text="Название работы:" Margin="0,0,0,4"/>
        <TextBox Grid.Row="1" x:Name="WorkNameBox" Padding="5,3" Margin="0,0,0,10"/>

        <!-- Пункт раздела (список с поиском) -->
        <DockPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock DockPanel.Dock="Top" Text="Пункт раздела:" Margin="0,0,0,4"/>
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,4">
                <Image DockPanel.Dock="Left" Source="{StaticResource IconSearch}"
                       Width="18" Height="18" Margin="0,0,5,0"/>
                <TextBox x:Name="SearchBox" Padding="5,3"
                         TextChanged="SearchBox_TextChanged"/>
            </DockPanel>
            <ListBox x:Name="ItemsList"
                     DisplayMemberPath="DisplayText"
                     SelectionChanged="ItemsList_SelectionChanged"/>
        </DockPanel>

        <!-- Баллы -->
        <DockPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock DockPanel.Dock="Left" Text="Баллы:" Width="130" VerticalAlignment="Center"/>
            <TextBlock DockPanel.Dock="Right" x:Name="MaxPointsLabel" Foreground="Gray"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox x:Name="PointsBox" Padding="5,3" Width="80" HorizontalAlignment="Left"/>
        </DockPanel>

        <!-- Дата -->
        <DockPanel Grid.Row="4" Margin="0,0,0,8">
            <TextBlock DockPanel.Dock="Left" Text="Дата окончания:" Width="130" VerticalAlignment="Center"/>
            <DatePicker x:Name="DueDatePicker" Width="160" HorizontalAlignment="Left"/>
        </DockPanel>

        <!-- Статус -->
        <DockPanel Grid.Row="5" Margin="0,0,0,8">
            <TextBlock DockPanel.Dock="Left" Text="Статус:" Width="130" VerticalAlignment="Center"/>
            <ComboBox x:Name="StatusCombo" Width="220" HorizontalAlignment="Left"
                      DisplayMemberPath="DisplayName" SelectedValuePath="Value"/>
        </DockPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Padding="20,6" Margin="0,0,10,0"
                    Click="Save_Click" IsDefault="True"/>
            <Button Content="Отмена" Padding="20,6" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>