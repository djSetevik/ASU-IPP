<Window x:Class="ASUIPP.App.Views.WorkItemPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор пункта работы" Width="600" Height="500"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip"
        Background="#C0C0C0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поиск -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock DockPanel.Dock="Left" Text="Поиск:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="SearchBox" Padding="5,3"
                     TextChanged="SearchBox_TextChanged"/>
        </DockPanel>

        <!-- Список пунктов -->
        <ListBox Grid.Row="1" x:Name="ItemsList" Margin="0,0,0,10"
                 DisplayMemberPath="DisplayText"
                 SelectionChanged="ItemsList_SelectionChanged"/>

        <!-- Название работы -->
        <DockPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock DockPanel.Dock="Left" Text="Название работы:" Width="130" VerticalAlignment="Center"/>
            <TextBox x:Name="WorkNameBox" Padding="5,3"/>
        </DockPanel>

        <!-- Баллы -->
        <DockPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock DockPanel.Dock="Left" Text="Баллы:" Width="130" VerticalAlignment="Center"/>
            <TextBlock DockPanel.Dock="Right" x:Name="MaxPointsLabel" Foreground="Gray"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox x:Name="PointsBox" Padding="5,3" Width="80" HorizontalAlignment="Left"/>
        </DockPanel>

        <!-- Дата -->
        <DockPanel Grid.Row="4" Margin="0,0,0,8">
            <TextBlock DockPanel.Dock="Left" Text="Дата окончания:" Width="130" VerticalAlignment="Center"/>
            <DatePicker x:Name="DueDatePicker" Width="150" HorizontalAlignment="Left"/>
        </DockPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Добавить" Padding="20,8" Margin="0,0,10,0"
                    x:Name="OkButton" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Отмена" Padding="20,8" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>