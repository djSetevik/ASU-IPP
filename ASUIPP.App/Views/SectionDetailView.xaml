<UserControl x:Class="ASUIPP.App.Views.SectionDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <DockPanel Grid.Row="0" Margin="0,0,0,8">
            <Button DockPanel.Dock="Left" Content="← Назад" Padding="10,5" Margin="0,0,10,0"
                    Command="{Binding GoBackCommand}"/>
            <Button DockPanel.Dock="Right" Padding="8,4"
                    Command="{Binding CreateReportCommand}" ToolTip="Создать отчет">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{StaticResource IconReport}" Width="20" Height="20" Margin="0,0,5,0"/>
                    <TextBlock Text="Создать отчет" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <TextBlock Text="АСУИПП" FontSize="14" VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Название раздела -->
        <Border Grid.Row="1" Style="{StaticResource Win95Panel}" Margin="0,0,0,8">
            <DockPanel>
                <TextBlock DockPanel.Dock="Right" FontSize="16" FontWeight="Bold"
                           VerticalAlignment="Center">
                    <Run Text="Сумма балов: "/><Run Text="{Binding SectionPoints, Mode=OneWay}"/>
                </TextBlock>
                <TextBlock Text="{Binding SectionName}" FontSize="16" FontWeight="Bold"/>
            </DockPanel>
        </Border>

        <!-- Таблица работ -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Works}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  IsReadOnly="True" SelectionMode="Single"
                  HeadersVisibility="Column"
                  VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Название работы" Binding="{Binding WorkName}" Width="*"/>

                <DataGridTextColumn Header="Пункт раздела" Width="160">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0} {1}">
                            <Binding Path="WorkItem.DisplayId" FallbackValue=""/>
                            <Binding Path="WorkItem.Name" FallbackValue=""/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Дата окончания" Width="110"
                                    Binding="{Binding DueDate, StringFormat=dd.MM.yyyy}"/>

                <DataGridTemplateColumn Header="Статус" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.StatusOptions,
                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                      DisplayMemberPath="DisplayName"
                                      SelectedValuePath="Value"
                                      SelectedValue="{Binding Status, UpdateSourceTrigger=PropertyChanged}"
                                      BorderThickness="0" Background="Transparent"
                                      Tag="{Binding}"
                                      SelectionChanged="StatusCombo_Changed"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Файлы с иконками -->
                <DataGridTemplateColumn Header="Файлы" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource IconButton}" ToolTip="Прикрепить файл"
                                        Command="{Binding DataContext.AttachFileCommand,
                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                    <Image Source="{StaticResource IconAttach}" Width="20" Height="20"/>
                                </Button>
                                <Button Style="{StaticResource IconButton}" Margin="4,0,0,0"
                                        ToolTip="Открыть папку файлов"
                                        Command="{Binding DataContext.OpenFilesCommand,
                                                  RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{StaticResource IconFolder}" Width="20" Height="20"/>
                                        <TextBlock Text="{Binding AttachedFiles.Count}" Margin="2,0,0,0"
                                                   VerticalAlignment="Center" FontSize="11"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Баллы" Width="60"
                                    Binding="{Binding Points}"/>

                <!-- Редактировать -->
                <DataGridTemplateColumn Header="" Width="40">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource IconButton}" ToolTip="Редактировать"
                                    Command="{Binding DataContext.EditWorkCommand,
                                              RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}">
                                <Image Source="{StaticResource IconEdit}" Width="20" Height="20"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Удалить -->
                <DataGridTemplateColumn Header="" Width="40">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource IconButton}" ToolTip="Удалить"
                                    Command="{Binding DataContext.DeleteWorkCommand,
                                              RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}">
                                <Image Source="{StaticResource IconDelete}" Width="20" Height="20"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Добавить + Итого -->
        <DockPanel Grid.Row="3" Margin="0,8,0,0">
            <Button DockPanel.Dock="Left" Padding="8,6" FontSize="14"
                    Command="{Binding AddWorkCommand}" ToolTip="Добавить работу">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{StaticResource IconAdd}" Width="24" Height="24" Margin="0,0,5,0"/>
                    <TextBlock Text="Добавить работу" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Border DockPanel.Dock="Right" Style="{StaticResource Win95Panel}" Padding="10,6">
                <TextBlock HorizontalAlignment="Right" FontSize="16" FontWeight="Bold">
                    <Run Text="ИТОГО Сумма балов: "/><Run Text="{Binding GrandTotal, Mode=OneWay}"/>
                </TextBlock>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>