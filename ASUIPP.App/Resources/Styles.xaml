<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ── Шрифт Classic Console Neue ── -->
    <FontFamily x:Key="ConsoleFont">pack://application:,,,/Resources/Fonts/#Classic Console Neue</FontFamily>
    <FontFamily x:Key="FallbackFont">Consolas, Courier New, Fixedsys</FontFamily>

    <!-- ── Цвета Win95 ── -->
    <Color x:Key="Win95Bg">#C0C0C0</Color>
    <Color x:Key="Win95Dark">#808080</Color>
    <Color x:Key="Win95Light">#DFDFDF</Color>
    <Color x:Key="Win95White">#FFFFFF</Color>
    <Color x:Key="Win95Black">#000000</Color>
    <Color x:Key="Win95Blue">#000080</Color>
    <Color x:Key="Win95TitleText">#FF8800</Color>

    <SolidColorBrush x:Key="BgBrush" Color="{StaticResource Win95Bg}"/>
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource Win95Dark}"/>
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource Win95Light}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource Win95White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Win95Black}"/>
    <SolidColorBrush x:Key="BlueBrush" Color="{StaticResource Win95Blue}"/>

    <!-- ── Иконки ── -->
    <BitmapImage x:Key="IconAdd" UriSource="/Resources/Icons/add.png"/>
    <BitmapImage x:Key="IconDelete" UriSource="/Resources/Icons/delete.png"/>
    <BitmapImage x:Key="IconFolder" UriSource="/Resources/Icons/folder.png"/>
    <BitmapImage x:Key="IconAttach" UriSource="/Resources/Icons/attach.png"/>
    <BitmapImage x:Key="IconSearch" UriSource="/Resources/Icons/search.png"/>
    <BitmapImage x:Key="IconExport" UriSource="/Resources/Icons/export.png"/>
    <BitmapImage x:Key="IconReport" UriSource="/Resources/Icons/report.png"/>
    <BitmapImage x:Key="IconEdit" UriSource="/Resources/Icons/edit.png"/>

    <!-- ── Window ── -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BgBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- ── UserControl ── -->
    <Style TargetType="UserControl">
        <Setter Property="Background" Value="{StaticResource BgBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- ── Button (рельефный 3D) ── -->
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="MinHeight" Value="26"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Outer" BorderThickness="2" Background="{StaticResource BgBrush}">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource Win95White}" Offset="0"/>
                                <GradientStop Color="{StaticResource Win95Dark}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border x:Name="Inner" BorderThickness="1"
                                BorderBrush="{StaticResource LightBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Outer" Property="BorderBrush">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="{StaticResource Win95Dark}" Offset="0"/>
                                        <GradientStop Color="{StaticResource Win95White}" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── TextBox (вдавленный) ── -->
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="4,3"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border BorderThickness="2" Background="{TemplateBinding Background}">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource Win95Dark}" Offset="0"/>
                                <GradientStop Color="{StaticResource Win95White}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <ScrollViewer x:Name="PART_ContentHost" Margin="2,1"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ── ComboBox ── -->
    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="4,3"/>
    </Style>

    <!-- ── ListBox ── -->
    <Style TargetType="ListBox">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource DarkBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- ── DataGrid ── -->
    <Style TargetType="DataGrid">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource DarkBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#A0A0A0"/>
        <Setter Property="VerticalGridLinesBrush" Value="#A0A0A0"/>
        <Setter Property="RowBackground" Value="White"/>
        <Setter Property="AlternatingRowBackground" Value="#F0F0F0"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="6,5"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#E0E0E0" Offset="0"/>
                    <GradientStop Color="#B0B0B0" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="{StaticResource DarkBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,1,1"/>
    </Style>

    <Style TargetType="DataGridRow">
        <Setter Property="MinHeight" Value="30"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource BlueBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ── Menu (синяя полоса) ── -->
    <Style TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource BlueBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- ── MenuItem ── -->
    <Style TargetType="MenuItem">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="{StaticResource BgBrush}"/>
        <Style.Triggers>
            <Trigger Property="Role" Value="TopLevelHeader">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="Transparent"/>
            </Trigger>
            <Trigger Property="Role" Value="TopLevelItem">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="Transparent"/>
            </Trigger>
            <Trigger Property="IsHighlighted" Value="True">
                <Setter Property="Background" Value="#D0D0D0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ── Popup/Dropdown фон серый ── -->
    <Style TargetType="{x:Type Popup}">
        <Setter Property="AllowsTransparency" Value="True"/>
    </Style>

    <!-- ── Separator в меню ── -->
    <Style TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource DarkBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="2,2"/>
    </Style>

    <!-- ── ScrollViewer фон серый ── -->
    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="{StaticResource BgBrush}"/>
    </Style>

    <!-- ── ItemsControl фон серый ── -->
    <Style TargetType="ItemsControl">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
    </Style>

    <!-- ── TextBlock ── -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
    </Style>

    <!-- ── RadioButton ── -->
    <Style TargetType="RadioButton">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,2"/>
    </Style>

    <!-- ── CheckBox ── -->
    <Style TargetType="CheckBox">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- ── DatePicker ── -->
    <Style TargetType="DatePicker">
        <Setter Property="FontFamily" Value="{StaticResource ConsoleFont}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- ── Именованные стили ── -->

    <!-- Рельефная панель -->
    <Style x:Key="Win95Panel" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Win95White}" Offset="0"/>
                    <GradientStop Color="{StaticResource Win95Dark}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Вдавленная панель -->
    <Style x:Key="Win95Sunken" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Win95Dark}" Offset="0"/>
                    <GradientStop Color="{StaticResource Win95White}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Кнопка-иконка (без текста, только картинка) -->
    <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="MinHeight" Value="0"/>
        <Setter Property="MinWidth" Value="0"/>
    </Style>

</ResourceDictionary>