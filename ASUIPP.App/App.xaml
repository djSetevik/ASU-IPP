<Application x:Class="ASUIPP.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ASUIPP.App.Converters"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <conv:StatusToStringConverter x:Key="StatusToString"/>
        <conv:StatusToColorConverter x:Key="StatusToColor"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:InvertBoolConverter x:Key="InvertBool"/>
        <conv:DaysToReminderTextConverter x:Key="DaysToText"/>
        <conv:DaysToReminderColorConverter x:Key="DaysToColor"/>
    </Application.Resources>
</Application>